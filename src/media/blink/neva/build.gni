import("//neva/neva.gni")

neva = {
  configs = []
  defines = []
  public_configs = []
  deps = [ "//ui/platform_window:mojom" ]
  public_deps = [
    "//base",
    "//neva/pal_media_service/public/mojom",
    "//third_party/jsoncpp",
  ]
  _dir = get_path_info("../neva", "abspath")
  sources = [
    "$_dir/media_info_loader.cc",
    "$_dir/media_info_loader.h",
    "$_dir/media_player_neva_interface.cc",
    "$_dir/media_player_neva_interface.h",
    "$_dir/mediaplayerneva_factory.h",
    "$_dir/mediaplayerneva_factory_stub.cc",
    "$_dir/remote_mediaplayer_client.cc",
    "$_dir/remote_mediaplayer_client.h",
    "$_dir/stream_texture_interface.h",
    "$_dir/video_frame_provider_impl.cc",
    "$_dir/video_frame_provider_impl.h",
    "$_dir/video_util_neva.cc",
    "$_dir/video_util_neva.h",
    "$_dir/webmediaplayer_mse.cc",
    "$_dir/webmediaplayer_mse.h",
    "$_dir/webmediaplayer_neva.cc",
    "$_dir/webmediaplayer_neva.h",
    "$_dir/webmediaplayer_neva_factory.h",
    "$_dir/webmediaplayer_neva_factory.cc",
    "$_dir/webmediaplayer_params_neva.cc",
    "$_dir/webmediaplayer_params_neva.h",
  ]
  if (is_webos) {
    sources -= [
      "$_dir/mediaplayerneva_factory_stub.cc",
    ]
    import ("//media/blink/neva/webos/build.gni")
    configs += webos.configs
    defines += webos.defines
    public_configs += webos.public_configs
    deps += webos.deps
    public_deps += webos.public_deps
    sources += webos.sources
  }

  if(use_neva_webrtc) {
    sources += [
      "$_dir/webmediaplayer_webrtc.cc",
      "$_dir/webmediaplayer_webrtc.h",
    ]
  }

  if(use_neva_media_for_testing) {
    sources -= [
      "$_dir/mediaplayerneva_factory_stub.cc",
    ]
    sources += [
      "$_dir/fake_url_mediaplayer.cc",
      "$_dir/fake_url_mediaplayer.h",
      "$_dir/fake_mediaplayerneva_factory.cc",
    ]
  }
}
