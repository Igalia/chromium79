import("//neva/neva.gni")

neva = {
  configs = []
  public_configs = []
  deps = []
  public_deps = [ "//third_party/jsoncpp" ]
  _dir = get_path_info("../neva", "abspath")
  sources = [
      "$_dir/media_constants.h",
      "$_dir/media_platform_api.cc",
      "$_dir/media_platform_api.h",
      "$_dir/media_platform_prefs.cc",
      "$_dir/media_platform_prefs.h",
      "$_dir/media_track_info.cc",
      "$_dir/media_track_info.h",
      "$_dir/media_type_restriction.h",
      "$_dir/neva_mime_util_internal.h",
  ]

  if (is_webos) {
    import ("//media/base/neva/webos/build.gni")
    configs += webos.configs
    public_configs += webos.public_configs
    deps += webos.deps
    public_deps += webos.public_deps
    sources += webos.sources
  } else if (use_neva_media_for_testing) {
    sources += [
      "$_dir/media_platform_api_mock.cc",
      "$_dir/media_platform_api_mock.h",
      "$_dir/media_platform_prefs_stub.cc",
      "$_dir/media_platform_prefs_stub.h",
      "$_dir/neva_mime_util_internal_stub.cc",
    ]
  } else {
    sources += [
      "$_dir/media_platform_api_stub.cc",
      "$_dir/media_platform_api_stub.h",
      "$_dir/media_platform_prefs_stub.cc",
      "$_dir/media_platform_prefs_stub.h",
      "$_dir/neva_mime_util_internal_stub.cc",
    ]
  }
}

